{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "allowJs": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node",
      "lodash",
      "mocha",
      "chai"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
